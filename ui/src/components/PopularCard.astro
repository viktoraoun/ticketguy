---
interface Props {
	title: string;
	imageUrl: string;
    alt: string;
}

const { title, imageUrl, alt } = Astro.props;
---

<article class="cursor-pointer mr-4 flex-shrink-0 w-3/4 md:flex-shrink-1 md:w-2/5 lg:w-[23.8%]">
    <img src=`${imageUrl}` alt=`${alt}` class="w-full h-3/4 object-cover" />
    <h3 class="text-start mt-2 ml-2 text-xl">{title}</h3>
</article>
