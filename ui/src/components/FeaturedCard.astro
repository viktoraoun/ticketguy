---
interface Props {
	title: string;
	imageUrl: string;
    alt: string;
}

const { title, imageUrl, alt } = Astro.props;
---

<article class="flex flex-col cursor-pointer my-4 md:basis-[48%]">
    <img class="shadow-lg self-start md:h-[20vh] lg:h-[45vh] w-full object-cover" src=`${imageUrl}` alt=`${alt}` />
    <h3 class="text-2xl mt-2">{title}</h3>
</article>
